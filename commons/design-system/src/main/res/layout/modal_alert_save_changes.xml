<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_radius"
    android:paddingBottom="40dp">

    <ImageView
        android:id="@+id/imgAlertSaveChanges"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDescriptionDiscardChanges"
        style="@style/text_santral_medium_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imgAlertSaveChanges"
        app:layout_constraintStart_toStartOf="@+id/imgAlertSaveChanges"
        app:layout_constraintTop_toBottomOf="@+id/imgAlertSaveChanges" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCancelSaveChanges"
        style="@style/text_santral_bold_14sp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_color_button"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescriptionDiscardChanges" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaveChangesOk"
        style="@style/text_santral_bold_14sp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_color_button_green"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/btnCancelSaveChanges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescriptionDiscardChanges" />


</androidx.constraintlayout.widget.ConstraintLayout>